<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>

    <div class="container m-2">
        <a href="/" class="link-dark">
            <i class="fa-solid fa-arrow-left"></i>
        </a>
    </div>

    <div class="container my-5 border-0 shadow-lg p-2 rounded" id="<%= pokeType %>">

        <div class="card mb-3 border-0">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= pokeImg %>" class="img-fluid rounded-start" alt="<%= pokeName %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= pokeName %>
                        </h5>
                        <span class="card-text">id:<%= pokeId %></span><br>
                        <span class="card-text">weight:<%= pokeWeight %></span>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <%- include('../partials/fontscript') %>
    <%- include('../partials/colorize') %>

</body>

</html>